# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index
GET     /channel                                Application.channel
GET     /test/?                                 Application.saveUser
GET     /indexDeez/{user}                       Application.indexDeez
GET     /test2/                                 Application.connectUser
GET     /getSpotAccessToken                     Application.spotConnection
GET     /putSpotAlbums                          Application.putSpotAlbums
GET     /getDeezAlbums                          Application.getGson
POST     /viewAlbum                             Application.getDeezAlbum
GET     /viewDeez                               Application.getDeezView
GET     /viewSpot/?                               Application.getSpotView
GET     /deezToSpot/?                            Application.spotToDeezView
GET     /deez.inc.html/?                            Application.deezInc
GET     /spot.inc.html/?                            Application.spotInc
# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
